        "@react-three/drei": "^7.22.1",
        "@react-three/fiber": "^7.0.19",
        "@react-three/flex": "^0.7.0",
        "@snowpack/plugin-sass": "^1.4.0",
        "framer-motion": "^5.3.0",
        "hamburger-react": "^2.4.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-query": "^3.34.8",
        "three": "^0.134.0",
        "wouter": "^2.7.5",
        "zustand": "^3.6.5"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^4.0.3",
        "@snowpack/plugin-dotenv": "^2.2.0",
